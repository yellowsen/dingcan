<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:option="http://schemas.android.com/apk/res/com.sen.dingcan"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/fish" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.sen.dingcan.view.OptionView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                option:title="订单查询"
                option:icon="@android:drawable/btn_star"
                >
            </com.sen.dingcan.view.OptionView>
            
            
            <com.sen.dingcan.view.OptionView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                option:title="查看购物车"
                option:icon="@android:drawable/btn_plus"
                >
            </com.sen.dingcan.view.OptionView>
            
            <com.sen.dingcan.view.OptionView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                option:title="我的收藏"
                option:icon="@android:drawable/btn_radio"
                >
            </com.sen.dingcan.view.OptionView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>